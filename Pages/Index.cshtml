@page
@model IndexModel

@if (Model.Administrators.Count == 0)
{
  <p>Nel database <strong>non esiste alcun amministratore</strong>. Crealo compilando il form qui sotto:</p>
  <partial name="_UserCreateForm"></partial>
}
else
{
  <p>Nel database esistono <strong>@Model.Administrators.Count</strong> amministratori:</p>
  <ul>
  @foreach (var administrator in Model.Administrators)
  {
    <li>@administrator</li>
  }
  </ul>

  @* Invitiamo a visitare la pagina di gestione utenti *@
  @if (User.HasClaim(ClaimTypes.Role, nameof(Role.Administrator)))
  {
      <p>Sei autenticato come amministratore, perci√≤ puoi accedere alla pagina di <a asp-page="/Users">gestione utenti</a>.</p>
  }
  else
  {
    <p>Al momento non hai il ruolo di amministratore ma puoi fare il <a asp-page="/Identity/Login">login</a> con uno degli account amministratore elencati qui per poter accedere alla pagina di <a asp-page="/Users">gestione utenti</a>.</p>
  }
}
